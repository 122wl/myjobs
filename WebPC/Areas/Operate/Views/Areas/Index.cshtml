@model IEnumerable<Model.Areas>

@{
    Layout = "~/Areas/Operate/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "区域管理";
}
@section styles
{
    <link href="~/Plugin/pager/css/pager.css" rel="stylesheet" />
    <link href="~/Css/jquery.datatables.css" rel="stylesheet" />
    <link href="~/Css/selling.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Plugin/pager/jquery-pager.js"></script>
    <script src="~/Areas/Operate/Scripts/Areas/Index.js"></script>
}
<p>
    @Html.ActionLink("添加区域", "Add")
</p>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-inline" id="AreasForm" >
                <div class="form-group">
                    <input type="hidden" id="PID" value="-1"/>
                    <label class="sr-only" for="AName">请输入区域名称</label>
                    <input type="text" class="form-control" id="AName" name="AName" placeholder="请输入区域名称">
                </div>
                <div class="form-group">
                    <div selectname="['ProvinceID','CityID']" domdata-citys>
                    </div>
                </div>
                <button type="button" id="btnSearch" class="btn btn-default">查询</button>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered mb30">
            <thead>
                <tr>
                    <th>编号</th>
                    <th>区域名</th>
                    <th>邮编</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody id="AreasTb"></tbody>
        </table>
        <span class="pager"></span>
    </div><!-- table-responsive -->
</div><!-- col-sm-7 -->


@using System.Collections
@{
    Layout = "~/Areas/Operate/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "属性名管理";
}
@section styles{
<link href="~/Css/jquery.datatables.css" rel="stylesheet" />
<link href="~/Plugin/window/css/common.css" rel="stylesheet" />
<link href="~/Plugin/pager/css/pager.css" rel="stylesheet" />
    <style>
        #tbodyAttr tr:hover {
            background-color: #ddf7fc;
        }
    </style>
}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-inline">
                <div class="form-group">
                    <label>属性规格名称</label>
                    <input type="text" id="txtAName" class="form-control input-sm" />
                </div>
                <div class="form-group">
                    <label>一级类目</label>
                    @Html.DropDownList("GClass",null, new { @class = "form-control select-sm" })
                </div>
                <div class="form-group">
                    <label>类型</label>                   
                     @Html.DropDownList("AStatus", null, "请选择状态", new { @class = "form-control select-sm" })
                </div>
                <input type="button" id="btnSearch" class="btn btn-primary btn-sm" value="查询" />
            </form>
        </div>
    </div>
</div>
<div class="row">
    <ul class="filemanager-options">
        <li>
            @*<a class="btn btn-primary btn-sm white" id="addAttr">添加属性规格</a>*@
            <a class="btn btn-default btn-sm" gcid="" id="combineAttr">合并属性</a>
        </li>
    </ul>
</div><!--总体操作-->
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table mb30 tablAttr">
                    <thead>
                        <tr>
                            <th>选择</th>
                            <th>属性规格名称</th>
                            <th>类型</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyAttr"></tbody>
                </table>
                <span id="pager" class="pager" style="float:right;">
                </span>
            </div><!--table-responsive-->
        </div><!--panel-body-->
    </div><!--panel-->
</div><!---row-->
<div id="windowShowCombine" style="display: none;">
    <br />
    <span style="font-weight:bold;">选择合并到的属性名：</span><br />
    <div class="select-lists clearfix" id="divCombine">
    </div>
    <div class="form-group" style="margin-top: 20px;">
        <div class="col-sm-9 col-sm-offset-3">
            <input type="button" class="btn btn-primary btn-sm" id="btnSaveC" value="保存"/>
            <input type="button" class="btn btn-default btn-sm" id="btnCancelC" value="取消" />
        </div>
    </div>
</div>
<div id="windowShowEdit" style="display: none;">
    <br />
    <div class="form-group">
        <label class="col-sm-3 control-label">属性名称<span class="asterisk" style="max-width:500px;">*</span></label>
        <div class="col-sm-6">
            <input type="text" aid="" id="textAName" name="textAName" class="form-control" data-val="true" />
        </div>
    </div>
    <div class="form-group" style="margin-top: 20px;">
        <div class="col-sm-9 col-sm-offset-3">
            <input type="button" class="btn btn-primary btn-sm" id="btnSaveE" value="保存" />
            <input type="button" class="btn btn-default btn-sm" id="btnCancelE" value="取消" />
        </div>
    </div>
</div>
@section scripts
{
<script src="~/Scripts/Common/Common.js"></script>
    <script src="~/Scripts/public.js"></script>
    <script src="~/Plugin/selectall/jquery-selectall.js"></script>
    <script src="~/Plugin/pager/jquery-pager.js"></script>
<script src="~/Areas/Operate/Scripts/Attributes/AttributesIndex.js"></script>
}

@model Model.GoodsClass
@{
    Layout = "~/Areas/Operate/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "商品类目添加";
    IList<Model.GoodsClass> list = ViewBag.Parentid as IList<Model.GoodsClass>;
}
@section styles{
    <link href="@Url.Content("~/Scripts/poshytip/tip-yellowsimple/tip-yellowsimple.css")" rel="stylesheet" type="text/css" />
}
@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/poshytip/jquery.poshytip.min.js")" type="text/javascript"></script>
<script src="~/Areas/Operate/Scripts/GoodsClass/Add.js"></script>
}
@using (Ajax.BeginForm("../GoodsClass/Add", null, new AjaxOptions { OnSuccess = "CommentSuccess" }, null))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>GoodsClass</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.CName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Parentid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="Parentid" id="Parentid">
                    <option value="0" selected='selected'>顶级分类</option>
                    @foreach (var item in list)
                    {
                        <option value="@item.ID"> @item.CName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="添加" class="btn btn-default" />
                @Html.ActionLink("返回", "Index")
            </div>
        </div>
    </div>
}


    <ul class="fewdata area3">
        <div class="list1">
            <li>
                价格区间开关
            </li>
            <li class="filter-type form-inline">
                <input id="switch-size" type="checkbox" checked data-size="mini">
            </li>
        </div>

        <div class="list2">
            <li class="form-inline">
                <span>下限浮动率：</span>
                <input class="form-control" type="text" name="" id="" value="" placeholder="5" />%
            </li>
            <li class="filter-type form-inline">
                <span>上限浮动率:</span>
                <input class="form-control" type="text" name="" id="" placeholder="5" style="width: 60px;" />%
            </li>
        </div>
    </ul>
</div>
<div class="row">
    <input class="btn btn-primary btn-sm" type="btn " name="" id="" value="立即生效" />
</div>


@{
    Layout = "~/Views/Shared/_ChildLayout.cshtml";
}
@section styles
{
    <link href="../../css/style.default.css" rel="stylesheet">
    <link href="../../css/base.css" rel="stylesheet" />
    <link href="~/Css/selling.css" rel="stylesheet" />
    <link href="~/Plugin/pager/css/pager.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/jquery-permission.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Plugin/pager/jquery-pager.js" type="text/javascript"></script>
    <script src="~/Scripts/GoodsBasic/AutoGoodsBasic.js" type="text/javascript"></script>
}
<div>

    @using (Ajax.BeginForm("../GoodsBasic/GetAutoGoodsBasicTotal", null, new AjaxOptions { HttpMethod = "post", OnSuccess = "success" }, new { Class = "form-inline", id = "CommentForm" }))
    {
        <div class="form-group">
            <input type="text" name="name" id="name" placeholder="请输入商品名称" class="input-sm form-control" />
        </div>
        //已经选择过的商品ID
        @Html.Hidden("GoodsBasicIDs", ViewBag.GoodsBasicIDs as string)
        <div class="form-group" id="ccc" selectname="['sheng','GoodsClassFirst','GoodsClassSecond']" selectvalue="[10,-1,-1]" domdata-goodsclass></div>

        <div class="form-group">
            @{
                <select class="form-control" name="groupId">
                    <option value="-1">请选择商品分组</option>
                    @foreach (var val in ViewBag.GoodsGroup as IList<Model.GoodsGroup>)
                    {
                        <option value="@val.ID">@val.GroupName</option>
                    }
                </select>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="搜索" class="btn btn-primary" style="height: 32px;line-height: 15px;">
        </div>
    }

</div>
<hr style="margin: 5px 0" />
<div id="content">

</div>
<hr style="margin: 5px 0" />
<div style="padding:5px;margin-bottom: 0">
    <div class="btn-group" style="float: right">
        <a id="btnSubmit" style="width: 120px;height: 35px;line-height: 19px;" class="btn btn-primary">确认</a>
    </div>
    <span id="pager" class="pager"></span>
</div>

@using System.Drawing
@{
    ViewBag.Title = "商品可视分组";
    IList<Model.GoodsGroup> list = ViewBag.List as IList<Model.GoodsGroup>;
}
@section styles
{
    <link href="~/Plugin/pager/css/pager.css" rel="stylesheet" />
    <link href="~/Plugin/window/css/common.css" rel="stylesheet" />
<link href="~/Css/base.css" rel="stylesheet" />
}
<div class="row">
    <ul class="filemanager-options">
        <li>
            <div class="ckbox ckbox-default">
                <input type="checkbox" id="selectall" data-func="selectall" data-name="CheckYou">
                <label for="selectall">全选</label>
            </div>
        </li>
        <li>
            <a class="btn btn-default btn-sm" id="DeleteAllThis" data-au="GoodsGroupDel">删除</a>
        </li>
        <li class="filter-type">
            <a class="btn btn-primary btn-sm white"
               data-title="新增商品可视分组"
               data-func="openWin"
               data-id="addGoodsWin"
               data-show-btn="false"
               data-callback="index.closeCallback"
               data-ele="addNewGoods"
               data-width="500"
               data-height="300" data-au='GoodsGroupEdit'>新增商品可视分组</a>
        </li>
    </ul>
</div>

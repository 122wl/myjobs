@model Model.GuidUn

@{
    ViewBag.Title = "Update";
    Layout = "/Shared/_ChildLayout.cshtml";
}
@section styles{
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Css/base.css" rel="stylesheet">
    <link href="~/Css/bootstrap-override.css" rel="stylesheet" />
    <link href="~/Css/windowbase.css" rel="stylesheet" />
}
@section scripts{
    @*<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/poshytip/jquery.poshytip.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/Public/PageValidate.js"></script>
    <script type="text/javascript">
        function testCallback_Create(obj) {
            $.closeParentWindow({
                status: true,
                winId: "editThis_Create_Guid"
            });
        }
        $(function () {
            $("#EditClose").click(function () {
                $.closeParentWindow({
                    status: false,
                    winId: "editThis_Create_Guid"
                });
            });
        })
    </script>
}
<form method="post" class="shopEdit" id="frnAdd" data-ajax="true" data-callback="testCallback_Create" action="Create">
    <div class="form-group">
        <input type="hidden" value="@ViewBag.ShopInfoID" name="ShopInfoID" />
        <label class="col-sm-3 control-label">导购姓名<span class="asterisk">*</span></label>
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.GuidName, new { @Class = "form-control", placeholder = "限制在15个汉字内（30个字符）" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">注册手机号：<span class="asterisk">*</span></label>
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.TEl, new { @Class = "form-control", placeholder = "请输入正确的手机号" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">所属类型<span class="asterisk">*</span></label>
        <div class="col-sm-8">
            @Html.DropDownListFor(x => x.GuidType, null, htmlAttributes: new { @class = "form-control", style = "width:Auto;display:inline;" })
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-primary" value="保存" />
        <button type="button" class="btn btn-default" id="EditClose" data-dismiss="modal">取消</button>
    </div>
</form>



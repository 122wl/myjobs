            </div>
            <input type="hidden" id="hidKey" />
            <div class="modal-body">
                <label>头像：</label>
                <div style="height: 190px" id="uploadthis" data-image-type="3" data-max="1" data-callback-element="infoIMG" data-url="/File/ImageUpload" data-accept="image/png,image/jpeg" data-size="2048" data-multiple="multiple" data-path="/File/ShowImage/{0}" data-parttern="single" data-cross-domain="true">
                </div>
                <input id="infoIMG" name="infoIMG" type="text" value="@user.UserBasic.IMG" style="display: none" />
                
                <p></p>
                <label>账号名称：</label>
                <p>@user.UserName</p>

                <p></p>
                <label>昵称：</label>
                <input type="text" id="thisname" class="form-control" placeholder="请输入昵称" style="width: 40%" />

                <p></p>
                <label>性别：</label>
                <select id="SexId" class="form-control" style="width: 40%">
                        <option value="0">保密</option>
                        <option value="1">男</option>
                    <option value="2">女</option>
                </select>
                @*@Html.DropDownList("SexId", null,  htmlAttributes: new { @class = "form-control" })*@
            </div>
        <input id="hidId" type="hidden" value=""/>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="ClickSave()">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->





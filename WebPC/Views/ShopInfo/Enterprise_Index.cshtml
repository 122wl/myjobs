@model Model.ShopInfo

@{
    ViewBag.Title = "直营店管理";
}

@section Styles{

    <link href="@Url.Content("~/css/jquery.datatables.css")" rel=" stylesheet">
    <link href="@Url.Content("~/Plugin/window/css/common.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/poshytip/tip-yellowsimple/tip-yellowsimple.css")" rel="stylesheet" type="text/css" />
    <link href="~/Plugin/pager/css/pager.css" rel="stylesheet" />
    <link href="~/Css/ShopInfo/Enterprise_Index.css" rel="stylesheet" />
    <link href="~/Css/selling.css" rel="stylesheet" />

}
@section Scripts{

    @*<script src="@Url.Content("~/Scripts/public.js")"></script>
    <script src="@Url.Content("~/Plugin/window/jquery-window.js")"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/poshytip/jquery.poshytip.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/ChannelpublicJs/PublicStatus.js"></script>
    <script src="/Plugin/window/jquery-window.js"></script>
    <script src="/Plugin/selectall/jquery-selectall.js"></script>
    <script src="/Plugin/pager/jquery-pager.js"></script>
    <script src="/Scripts/ShopInfo/Enterprise_Index.js" type="text/javascript"></script>
}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="conditionForm" class="form-inline">
                <div class="form-group">
                    <input type="email" class="form-control" id="shopNameSreach" name="shopName" placeholder="请输入直营店名称">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="rphone" name="rphone" placeholder="请输入注册手机号">
                </div>
                <div class="form-group">
                    <div id="abcdE" dataneedcheck="0" selectname="['pId','cId','aId']" domdata-citys></div>
                </div>
                <div class="form-group">
                    @Html.DropDownList("ChannelID", null, "请选择渠道分组", htmlAttributes: new { @class = "form-control", style = "width:Auto;display:inline;" })
                </div>
                <div class="form-group">
                    @Html.DropDownList("ShopInfoStatus", null, htmlAttributes: new { @class = "form-control", style = "width:Auto;display:inline;" })
                </div>
                <button type="button" class="btn btn-primary btn btn-sm" id="search" data-au="ChnView">查询</button>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <ul class="filemanager-options">
        <li>
            <div class="ckbox ckbox-default">
                <input type="checkbox" id="selectall" data-func="selectall" data-name="checkbox" value="1">
                <label for="selectall">全选</label>
            </div>
        </li>
        <li class="inline">
            <span>
                <a class="btn btn-default btn-sm btn-default " id="BatchClose" data-au="ChnDel">批量关闭</a>
            </span>
            <span>
                @Html.DropDownList("ChannelPush", null, "请选择渠道分组", htmlAttributes: new { @class = "form-control", style = "width:Auto;display:inline;" })
            </span>
        </li>
        <li class="filter-type">
            <a href="javascript:void(0)"
               class="btn btn-primary btn-sm white winO2OPanel"
               data-title="新增直营店窗口"
               data-func="openWin"
               data-id="newWinCreate"
               data-show-btn="false"
               data-au="ChnEdit"
               data-callback="testCallback_Enterprise_Create"
               data-url="/ShopInfo/Enterprise_Create"
               data-width="800"
               data-height="500">新建直营店</a>
        </li>
    </ul>
</div><!--总体操作-->
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table mb30">
                    <thead>
                        <tr>
                            <th>选择</th>
                            <th>名称</th>
                            <th>区域</th>
                            <th>导购数</th>
                            <th>渠道分组</th>
                            <th>所属公众号</th>
                            <th>门店状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="tabbody">




                    </tbody>
                </table>
                <div class="dataTables_paginate paging_full_numbers" id="table2_paginate">
                    <span class="pager"></span>
                </div>
            </div><!--table-responsive-->
        </div><!--panel-body-->
    </div>
</div><!--panel-->
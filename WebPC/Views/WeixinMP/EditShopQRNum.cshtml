@model Model.ShopInfo
@{
    Layout = "~/Views/Shared/_ChildLayout.cshtml";
    //需要来判断是否存在
    if (Model.ID == 0)
    {
        <div>找不到实体店</div>
        return;
    }
    <link rel="stylesheet" href="~/Css/companyIfo.css" />
    <link rel="stylesheet" href="~/Css/base.css" />
    <link rel="stylesheet" href="~/Css/style.default.css" />
}
<form action="/WeixinMP/EditShopQRNum" method="post" data-ajax="true"
      data-callback="EditShopQRNumSuccess">
    <div class="form-group">
        <label class="col-sm-3 control-label">原二维码数：</label>
        <div class="col-sm-9">
            @Model.QRNum
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">改后可分配数:</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(o => o.QRNum, new { @class = "form-control" })
            @Html.HiddenFor(o => o.ID)
            @Html.HiddenFor(o => o.WeixinMPID)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
            <button type="submit" class="btn btn-primary">保存</button>
            <button type="button" id="EditShopQRNumCancel" class="btn btn-default">取消</button>
        </div>
    </div>
</form>
@section scripts{
    @* 引用页面js *@
    <script src="~/Scripts/WeixinMP/EditShopQRNum.js"></script>
}
